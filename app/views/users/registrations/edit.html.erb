<div class="row justify-content-center">
  <div class="col-sm-6 col-md-5 ">
    <h2>Редактирование профиля</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group">
        <%= f.label :name, :class => 'control-label' %>
        <%= f.text_field :name, :class => 'form-control'%>
      </div>

      <div class="field form-group">
        <%= f.label :email, "Почта", :class => 'control-label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-control'%>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Ждем подтверждения для: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field form-group">
        <%= f.label :subscription_type, "Тип рассылки",  :class => 'control-label' %>
        <%= f.select :subscription_type,
                     User.subscription_types.keys.map{ |key| [map_subscription_name(key), key] },
                     {},
                     {:class => 'form-control'}
                    %>
      </div>

      <div class="field form-group">
        <%= f.label :password, :class => 'control-label' %> <i>(оставьте пустым, если не собираетесь менять)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", :class => 'form-control' %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> символов минимум)</em>
        <% end %>
      </div>

      <div class="field form-group">
        <%= f.label :password_confirmation, :class => 'control-label' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => 'form-control' %>
      </div>

      <div class="field form-group">
        <%= f.label :current_password, :class => 'control-label' %> <i>(введите текущий пароль для подтверждения)</i>
        <%= f.password_field :current_password, autocomplete: "current-password", :class => 'form-control' %>
      </div>
  <br>

      <div class="d-grid gap-2 d-md-flex justify-content-md-center">
        <div class="actions">
          <%= f.submit "Обновить", :class => 'btn btn-outline-warning'%>
        </div>
      <% end %>
        <%= button_to "Удалить мой аккаунт", registration_path(resource_name), form: { data: { turbo_confirm: "Вы уверены?" } }, method: :delete , :class => 'btn btn-outline-danger' %>
        <%= link_to "Назад", :back, :class => 'btn btn-outline-dark pull-left' %>

    </div>
  </div>
</div>

