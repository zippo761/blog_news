<% if user_signed_in? %>
  <%= form_with model: [@post, @post.comments.build] do |f| %>

    <div class="form-floating">
      <%= f.text_area :content, :class => 'form-control', :id => "floatingTextarea", :style => "height: 150px" %>
      <label class="form-label" for="floatingTextarea">Текст комментария</label>
    </div>
    <br>
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
      <%= f.submit "Добавить комментарий", :class => 'btn btn-outline-success' %>
    </div><br>
  <% end %>
<% end %>