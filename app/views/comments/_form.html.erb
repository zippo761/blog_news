<hr>
<h3> Добавление комментария </h3>
<%= form_for([@post, @post.comments.build]) do |f| %>
<p>
  Пользователь<br>
  <%= f.text_area :username, :class => 'form-control' %>
</p>
<p>
  Текст комменатария<br>
  <%= f.text_area :content, :cols => "10", :rows => "10", :class => 'form-control' %>
</p>
<p>
  <%= f.submit "Добавить комментарий", :class => 'btn btn-success' %>
</p>
<% end %>
