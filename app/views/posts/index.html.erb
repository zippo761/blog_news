<h1>Посты</h1>

<% @posts.each do |post| %>
    <div class="alert alert-light">
      <h3><%= link_to post.title, post_path(post)  %></h3>
      <p><%= post.content %></p>
      <% if post.content.length > 700 %>
        <%=  link_to 'Читать далее', post, :class => 'btn btn-outline-primary' %>
      <% end %>
    </div>
<% end %>