<p style="color: green"><%= notice %></p>

<%= render @post %>

<div>
  <%= link_to "Редактировать", edit_post_path(@post), :class => "btn btn-warning" %> |
  <%= link_to "Назад ко всем постам", posts_path, :class => "btn btn-success" %>
  <hr>
  <%= button_to "Удалить", @post, form: { data: { turbo_confirm: "Вы уверены?" } }, method: :delete , :class => 'btn btn-danger'%>
</div>
<hr>
<h1>Все комментарии</h1>

<% @post.comments.each do |comment| %>
  <div class="alert alert-light">
    <p><strong><%=comment.username  %></strong>: <%= comment.content %></p>
  </div>
<% end %>
<hr>
<h2> Добавление комментария </h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    Пользователь<br>
  <%= f.text_field(:username, {:class => 'form-control'}) %>
  </p>
  <p>
    Текст комменатария<br>
    <%= f.text_area(:content, {:class => 'form-control'}) %>
  </p>
  <p>
    <%= f.submit("Добавить комментарий", {:class => 'btn btn-warning'}) %>
  </p>
<% end %>