<%= render @post %>

<% if can? :update, @post %>
  <%= link_to "Редактировать", edit_post_path(@post), :class => "btn btn-warning" %>
<% end %>
<hr>
<% if can? :destroy, @post %>
  <%= button_to "Удалить пост", post_path(@post), form: { data: { turbo_confirm: "Вы уверены?" } }, method: :delete , :class => 'btn btn-danger'%>
<% end  %>

<%= link_to "Назад ко всем постам", posts_path, :class => "btn btn-success" %>
<hr>

<div class="row">
  <div class="col-sm-10 col-sm-offset-1 col-md-5 col-md-offset-1">
    <%= render 'comments/comment', comment: @comment%>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-sm-10 col-sm-offset-1 col-md-5 col-md-offset-1">
    <%= render 'comments/form'%>
  </div>
</div>